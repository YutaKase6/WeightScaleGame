<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yutakase.weightscalegame.StartActivity">

    <ImageView
        android:id="@+id/LogoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-200dp"
        android:clickable="true"
        android:foregroundGravity="center_horizontal"
        android:padding="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_single" />


    <ImageView
        android:id="@+id/StartBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:foregroundGravity="center_horizontal"
        android:paddingTop="48dp"
        android:scaleType="fitEnd"
        android:src="@drawable/start_bottom_graph" />


    <TextView
        android:id="@+id/continue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="240dp"
        android:layout_marginTop="25dp"
        android:text="@string/continue_tap_text"
        android:textSize="30dp"
        android:textStyle="bold" />
</RelativeLayout>